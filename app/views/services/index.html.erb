(function($) {
    $(window).load(function(){
      var $container = $("#isotopeContainer");
      $container.mixitup({
        targetSelector: ".gallery-item",
        filterSelector: ".filter",
        sortSelector: ".sort",
        buttonEvent: "click",
        effects: [],
